datasource db {
  provider = "sqlite"
  url      = "file:./prisma/dev.db"
}

generator client {
  provider = "prisma-client-js"
}


model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  createdAt   DateTime @default(now())
}

model Photo {
  id          String   @id @default(cuid())
  title       String
  description String?
  imageUrl    String
  location    String?
  createdAt   DateTime @default(now())
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
}

model Category {
  id     String  @id @default(cuid())
  name   String  @unique
  photos Photo[]
}